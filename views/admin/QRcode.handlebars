<style>
    #mapa{
        display: none;
    }

    #sobre{
        display: none;
    }

    #sair{
        display: none;
    }

    #qr{
        display:none;
    }

    .card-body{
        position: relative;
        display: flex;
        justify-content: center;
    }
  #qrDiv{
    position: relative;
    width: 28vw;
    height: 60vh;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 100%;
    background-color: rgb(236, 252, 252);
  }

  #divQR{
    display: flex;
    position: absolute;
    width: 287px;
    height: 290px;
    margin-left: 5.7vw;
    margin-top: -8.5vh;
  }

  .qr-container {
    position: relative;
    width: 287px;
    height: 290px;
    display: flex;
  }

  #qrcode {
    width: 287px !important;
    height: 290px !important;
  }

  .scanner {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 10px;
    background: rgba(0, 255, 0, 0.5); /* Linha verde transl√∫cida */
    animation: scan 2s infinite;
    box-shadow: 0 0 10px rgba(0, 255, 0, 0.7); /* Brilho ao redor */
  }

  @keyframes scan {
    0% {
       top: 0;
    }
    100% {
      top: 100%;
    }
  }


</style>



<!--Card com imagem do qr-code-->
<div class="card">
    <div class="card-body">

        <!--Div do qr-code-->
        <div id="qrDiv">

            <div id="divQR">
                <div class="qr-container">
                    <canvas id="qrcode"></canvas>
                    <div class="scanner"></div>
                </div>

            </div>
            
        </div>
     
    </div>
</div>

<!--Script para criar o qrcode-->
  <script src="https://cdn.jsdelivr.net/npm/qrcode/build/qrcode.min.js"></script>

  <script>
    // 2. Gerar o QR Code
    const qrCodeData = "https://sistemazona.onrender.com/admin"; // Substitua pelo dado que deseja codificar
    const qrCodeCanvas = document.getElementById('qrcode'); // Agora selecionamos um <canvas>

    QRCode.toCanvas(qrCodeCanvas, qrCodeData, {
    width: 200, // Largura do QR Code
    margin: 1, // Margem ao redor
    }, function (error) {
    if (error) {
        console.error("Erro ao gerar QR Code:", error);
    } else {
        console.log("QR Code gerado com sucesso!");
    }
    });

    // 3. Interatividade (opcional)
    const scanner = document.querySelector('.scanner');

    qrCodeCanvas.addEventListener('mouseover', () => {
    scanner.style.animationPlayState = 'paused';
    });

    qrCodeCanvas.addEventListener('mouseout', () => {
    scanner.style.animationPlayState = 'running';
    });

  </script>
</body>
</html>

<style>
  .card{
    display: flex !important;
    flex-direction: row;
    margin-top: 5rem;
    margin-bottom: -3px;
    font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    border-bottom: none !important;
  }
  .card-body{
    display: flex;
    justify-content: space-between;
  }

  h2{
    margin-right: 2rem;
  }

  #divPesquisa{
   display: flexbox;
   justify-content: space-between;
  }

  #basic-addon1{
    background-color: rgba(3, 34, 34, 0);
    border-right: none;
  }

  #inputP{
    border-left: none;
  }

  .table{
    font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  }
  
  #btnVeiculos{
    margin-left: 7px;
    margin-right: 7px;
  }
</style>

<div class="card">
  <div class="card-body">
    
    <div class="input-group" id="divPesquisa">
      <h2>TABELA DE USUARIOS:</h2>
      <span class="input-group-text" id="basic-addon1"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#032222b0" class="bi bi-search" viewBox="0 0 16 16">
            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
          </svg>
      </span>
      <input type="text" class="form-control" placeholder="Pesquisar" aria-label="Pesquisar" aria-describedby="basic-addon1" id="inputP">
    </div>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th class="table-info">#ID</th>
      <th class="table-info">Nome</th>
      <th class="table-info">Idade</th>
      <th class="table-info">Estado</th>
      <th class="table-info">Bairro</th> 
      <th class="table-info">Rua</th>
      <th class="table-info">Ações</th>
    </tr>
  </thead>
  <tbody id="tableBody">
    <!-- Loop para iterar sobre cada item no array 'dados' -->
    {{#each dados}}
    <tr>
      <th scope="row">{{this._id}}</th>
      <td>{{this.nome}}</td>
      <td>{{this.idade}}</td>
      <td>{{this.estado}}</td>
      <td>{{this.bairro}}</td>
      <td>{{this.rua}}</td>
      <td>
        <div class="d-flex">
 
          <!-- Formulário para deletar o dado -->
          <form action="/admin/dados/deletar" method="post">
            <input type="hidden" name="id" value="{{this._id}}" />
            <button type="submit" class="btn btn-danger">
              
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-trash"
                viewBox="0 0 16 16"
              >
                <path
                  d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"
                ></path>
                <path
                  d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"
                ></path>
              </svg>
            </button>
          </form>

          <!-- Verificação para exibir o botão "Veículo" apenas se o usuário tiver um veículo cadastrado -->
          
          <a href="/admin/veiculos/{{this._id}}">
            <button class="btn btn-primary" id="btnVeiculos">
              
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-car-front-fill" viewBox="0 0 16 16">
  <path d="M2.52 3.515A2.5 2.5 0 0 1 4.82 2h6.362c1 0 1.904.596 2.298 1.515l.792 1.848c.075.175.21.319.38.404.5.25.855.715.965 1.262l.335 1.679q.05.242.049.49v.413c0 .814-.39 1.543-1 1.997V13.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-1.338c-1.292.048-2.745.088-4 .088s-2.708-.04-4-.088V13.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-1.892c-.61-.454-1-1.183-1-1.997v-.413a2.5 2.5 0 0 1 .049-.49l.335-1.68c.11-.546.465-1.012.964-1.261a.8.8 0 0 0 .381-.404l.792-1.848ZM3 10a1 1 0 1 0 0-2 1 1 0 0 0 0 2m10 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2M6 8a1 1 0 0 0 0 2h4a1 1 0 1 0 0-2zM2.906 5.189a.51.51 0 0 0 .497.731c.91-.073 3.35-.17 4.597-.17s3.688.097 4.597.17a.51.51 0 0 0 .497-.731l-.956-1.913A.5.5 0 0 0 11.691 3H4.309a.5.5 0 0 0-.447.276L2.906 5.19Z"/>
</svg>
            </button>
          </a>

        </div>
      </td>
    </tr>

    {{/each}}
  
  </tbody>
</table>

<!-- Caso não haja nenhum dado no array 'dados' -->
{{#unless dados.length}}
  <h4 class="mt-3">
    Nenhum dado registrado!
  </h4>
{{/unless}}

<script>
  // Função para filtrar a tabela enquanto o usuário digita
  document.getElementById('inputP').addEventListener('keyup', function() {
    const filter = this.value.toLowerCase();
    const rows = document.querySelectorAll('#tableBody tr');
    
    rows.forEach(row => {
      const nome = row.querySelector('td:nth-child(2)').textContent.toLowerCase();
      if (nome.includes(filter)) {
        row.style.display = '';
      } else {
        row.style.display = 'none';
      }
    });
  });
</script>

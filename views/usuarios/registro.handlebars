<!--Card de formulario de usuario-->

<h2 id="titulo">
  Crie sua conta:
</h2>
<div class="card">
  <div class="card-body">
    <!-- Formulário para adicionar novos dados, enviando uma requisição POST para /admin/dados/nova com suporte a arquivos -->
    <form action="/usuarios/registro" method="post">
      <label for="nome">
        Nome:
      </label>
      <input
        class="form-control"
        type="text"
        name="nome"
        id="nome"
        placeholder="Seu nome"
        required
      />
      <br />

      <label for="email">
        Email:
      </label>
      <input
        class="form-control"
        type="email"
        name="email"
        id="email"
        placeholder="Seu email"
        required
      />
      <br />

      <label for="senha">
        Senha:
      </label>
      <input
        class="form-control"
        type="password"
        name="senha"
        id="senha"
        placeholder="Sua senha"
        required
      />
      <br />

      <label for="senha2">
        Repita a sua senha:
      </label>
      <input
        class="form-control"
        type="password"
        name="senha2"
        id="senha2"
        placeholder="Sua senha"
        required
      />
      <br />

      <button type="submit" class="btn btn-primary">
        Criar conta
      </button>
    </form>
  </div>
</div>

